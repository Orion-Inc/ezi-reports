  h3 Configuration Generator
  .row
    .col-md-4.demo
      .form-group
        label Your Date Range Picker
        .input-group
          input#config-demo.form-control(type='text')
          span.input-group-addon
            span.ti-calendar
    .col-md-8
      .form-group
        label Configuration
        textarea#config-text.form-control(style='height: 300px; width: 100%; padding: 10px')
  .configurator
    form
      .row
        .col-md-4
          .form-group
            label(for='parentEl') parentEl
            input#parentEl.form-control(type='text', value='', placeholder='body')
          .form-group
            label(for='startDate') startDate
            input#startDate.form-control(type='text', value='07/01/2015')
          .form-group
            label(for='endDate') endDate
            input#endDate.form-control(type='text', value='07/15/2015')
          .form-group
            label(for='minDate') minDate
            input#minDate.form-control(type='text', value='', placeholder='MM/DD/YYYY')
          .form-group
            label(for='maxDate') maxDate
            input#maxDate.form-control(type='text', value='', placeholder='MM/DD/YYYY')
        .col-md-4
          .checkbox-custom
            input#autoApply(type='checkbox')
            label(for='autoApply') autoApply
          .checkbox-custom
            input#singleDatePicker(type='checkbox')
            label(for='singleDatePicker') singleDatePicker
          .checkbox-custom
            input#showDropdowns(type='checkbox')
            label(for='showDropdowns') showDropdowns
          .checkbox-custom
            input#showWeekNumbers(type='checkbox')
            label(for='showWeekNumbers') showWeekNumbers
          .checkbox-custom
            input#showISOWeekNumbers(type='checkbox')
            label(for='showISOWeekNumbers') showISOWeekNumbers
          .checkbox-custom
            input#timePicker(type='checkbox')
            label(for='timePicker') timePicker
          .checkbox-custom
            input#timePicker24Hour(type='checkbox')
            label(for='timePicker24Hour') timePicker24Hour
          .form-group
            label(for='timePickerIncrement') timePickerIncrement (in minutes)
            input#timePickerIncrement.form-control(type='text', value='1')
          .checkbox-custom
            input#timePickerSeconds(type='checkbox')
            label(for='timePickerSeconds') timePickerSeconds
          .checkbox-custom
            input#dateLimit(type='checkbox')
            label(for='dateLimit') dateLimit (with example date range span)
          .checkbox-custom
            input#ranges(type='checkbox')
            label(for='ranges') ranges (with example predefined ranges)
          .checkbox-custom
            input#locale(type='checkbox')
            label(for='locale') locale (with example settings)
          .checkbox-custom
            input#linkedCalendars(type='checkbox', checked='checked')
            label(for='linkedCalendars') linkedCalendars
          .checkbox-custom
            input#autoUpdateInput(type='checkbox', checked='checked')
            label(for='autoUpdateInput') autoUpdateInput
          .checkbox-custom
            input#alwaysShowCalendars(type='checkbox')
            label(for='alwaysShowCalendars') alwaysShowCalendars
        .col-md-4
          .form-group
            label(for='opens') opens
            select#opens.form-control
              option(value='right', selected='') right
              option(value='left') left
              option(value='center') center
          .form-group
            label(for='drops') drops
            select#drops.form-control
              option(value='down', selected='') down
              option(value='up') up
          .form-group
            label(for='buttonClasses') buttonClasses
            input#buttonClasses.form-control(type='text', value='btn btn-sm')
          .form-group
            label(for='applyClass') applyClass
            input#applyClass.form-control(type='text', value='btn-success')
          .form-group
            label(for='cancelClass') cancelClass
            input#cancelClass.form-control(type='text', value='btn-default')