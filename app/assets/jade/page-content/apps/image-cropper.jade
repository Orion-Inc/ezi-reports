                  span.docs-tooltip(data-toggle='tooltip', data-container='body', title='$().cropper("disable")')
                    span.ti-lock
                button.btn.btn-raised.btn-black(type='button', data-method='enable', title='Enable')
                  span.docs-tooltip(data-toggle='tooltip', data-container='body', title='$().cropper("enable")')
                    span.ti-unlock
              .btn-group
                button.btn.btn-raised.btn-black(type='button', data-method='reset', title='Reset')
                  span.docs-tooltip(data-toggle='tooltip', data-container='body', title='$().cropper("reset")')
                    span.ti-reload
                label.btn.btn-raised.btn-black.btn-upload(for='inputImage', title='Upload image file')
                  input#inputImage.sr-only(type='file', name='file', accept='image/*')
                  span.docs-tooltip(data-toggle='tooltip', data-container='body', title='Import image with Blob URLs')
                    span.ti-upload
                button.btn.btn-raised.btn-black(type='button', data-method='destroy', title='Destroy')
                  span.docs-tooltip(data-toggle='tooltip', data-container='body', title='$().cropper("destroy")')
