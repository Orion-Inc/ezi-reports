              .btn-group.btn-group-crop
                button.btn.btn-raised.btn-black(type='button', data-method='getCroppedCanvas')
                  span.docs-tooltip(data-toggle='tooltip', data-container='body', title='$().cropper("getCroppedCanvas")')
                    | Get Cropped Canvas
                button.btn.btn-raised.btn-black(type='button', data-method='getCroppedCanvas', data-option='{ "width": 160, "height": 90 }')
                  span.docs-tooltip(data-toggle='tooltip', data-container='body', title='$().cropper("getCroppedCanvas", { width: 160, height: 90 })')
                    | 160×90
                button.btn.btn-raised.btn-black(type='button', data-method='getCroppedCanvas', data-option='{ "width": 320, "height": 180 }')
                  span.docs-tooltip(data-toggle='tooltip', data-container='body', title='$().cropper("getCroppedCanvas", { width: 320, height: 180 })')
                    | 320×180
              // Show the cropped image in modal
              #getCroppedCanvasModal.modal.fade.docs-cropped(aria-hidden='true', aria-labelledby='getCroppedCanvasTitle', role='dialog', tabindex='-1')
                .modal-dialog
                  .modal-content
                    .modal-header
                      button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
                      h4#getCroppedCanvasTitle.modal-title Cropped
                    .modal-body
                    .modal-footer
                      button.btn.btn-raised.btn-default(type='button', data-dismiss='modal') Close
                      a#download.btn.btn-raised.btn-black(download='cropped.png', href='javascript:void(0);') Download
              // /.modal
              button.btn.btn-raised.btn-black(type='button', data-method='getData', data-option='', data-target='#putData')
                span.docs-tooltip(data-toggle='tooltip', title='$().cropper("getData")')
                  | Get Data
              button.btn.btn-raised.btn-black(type='button', data-method='setData', data-target='#putData')
                span.docs-tooltip(data-toggle='tooltip', title='$().cropper("setData", data)')
                  | Set Data
