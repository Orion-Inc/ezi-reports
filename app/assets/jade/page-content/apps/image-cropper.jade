.page-content.container-fluid
  .row
    .col-lg-12
      .widget
        .widget-body
          .row
            .col-md-9
              .img-container
                img(src=build+'images/zoom/01.jpg', alt='Picture')
            .col-md-3
              .docs-preview.clearfix
                .img-preview.preview-md
                .img-preview.preview-sm
                .img-preview.preview-xs
              .docs-data
                .form-group
                  .input-group
                    label.input-group-addon(for='dataX') X
                    input#dataX.form-control(type='text', placeholder='x')
                    span.input-group-addon px
                .form-group
                  .input-group
                    label.input-group-addon(for='dataY') Y
                    input#dataY.form-control(type='text', placeholder='y')
                    span.input-group-addon px
                .form-group
                  .input-group
                    label.input-group-addon(for='dataWidth') Width
                    input#dataWidth.form-control(type='text', placeholder='width')
                    span.input-group-addon px
                .form-group
                  .input-group
                    label.input-group-addon(for='dataHeight') Height
                    input#dataHeight.form-control(type='text', placeholder='height')
                    span.input-group-addon px
                .form-group
                  .input-group
                    label.input-group-addon(for='dataRotate') Rotate
                    input#dataRotate.form-control(type='text', placeholder='rotate')
                    span.input-group-addon deg
                .form-group
                  .input-group
                    label.input-group-addon(for='dataScaleX') ScaleX
                    input#dataScaleX.form-control(type='text', placeholder='scaleX')
                .form-group
                  .input-group
                    label.input-group-addon(for='dataScaleY') ScaleY
                    input#dataScaleY.form-control(type='text', placeholder='scaleY')
