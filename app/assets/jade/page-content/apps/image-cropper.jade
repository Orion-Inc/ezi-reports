                  | Set Canvas Data
              button.btn.btn-raised.btn-black(type='button', data-method='getCropBoxData', data-option='', data-target='#putData')
                span.docs-tooltip(data-toggle='tooltip', title='$().cropper("getCropBoxData")')
                  | Get Crop Box Data
              button.btn.btn-raised.btn-black(type='button', data-method='setCropBoxData', data-target='#putData')
                span.docs-tooltip(data-toggle='tooltip', title='$().cropper("setCropBoxData", data)')
                  | Set Crop Box Data
              input#putData.form-control(type='text', placeholder='Get data to here or set data with this value')
