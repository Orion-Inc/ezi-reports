.page-content.container-fluid
  .widget
    .widget-heading.clearfix
      h3.widget-title.pull-left Edit Product
      .pull-right
        button.btn.btn-primary(type='button')
          i.ti-save
        button.btn.btn-default(type='button')
          i.ti-share-alt
    .widget-body
      form.form-horizontal
        ul.nav.nav-tabs.mb-15(role='tablist')
          li.active(role='presentation')
            a(href='#general', aria-controls='general', role='tab', data-toggle='tab') General
          li(role='presentation')
            a(href='#data', aria-controls='data', role='tab', data-toggle='tab') Data
          li(role='presentation')
            a(href='#discount', aria-controls='discount', role='tab', data-toggle='tab') Discount
          li(role='presentation')
            a(href='#image', aria-controls='image', role='tab', data-toggle='tab') Image
        .tab-content
          #general.tab-pane.active(role='tabpanel')
            .form-group
              label.col-sm-3.control-label(for='txtProductName') Product Name
              .col-sm-9
                input#txtProductName.form-control(type='text')
            .form-group
              label.col-sm-3.control-label(for='txtMetaTagTitle') Meta Tag Title
              .col-sm-9
                input#txtMetaTagTitle.form-control(type='text')
            .form-group
              label.col-sm-3.control-label(for='txtMetaTagDescription') Meta Tag Description
              .col-sm-9
                textarea#txtMetaTagDescription.form-control
