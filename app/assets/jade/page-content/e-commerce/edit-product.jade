              label.col-sm-3.control-label(for='txtMetaTagKeywords') Meta Tag Keywords
              .col-sm-9
                textarea#txtMetaTagKeywords.form-control
            .form-group
              label.col-sm-3.control-label(for='txtDescription') Description
              .col-sm-9
                textarea#txtDescription.form-control
          #data.tab-pane(role='tabpanel')
